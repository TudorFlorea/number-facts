<resources>

    <!-- Base application theme. -->
    <style name="AppTheme.Green" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/theme_green_primary</item>
        <item name="colorPrimaryDark">@color/theme_green_primary_dark</item>
        <item name="colorAccent">@color/theme_green_accent</item>
        <item name="android:windowDisablePreview">@bool/theme_green_window_disable_preview</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>

    </style>

    <!-- Base application theme 2. -->
    <style name="AppTheme.Red" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/theme_red_primary</item>
        <item name="colorPrimaryDark">@color/theme_red_primary_dark</item>
        <item name="colorAccent">@color/theme_red_accent</item>
        <item name="android:windowDisablePreview">@bool/theme_red_window_disable_preview</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>

    </style>

    <!-- Base application theme 3. -->
    <style name="AppTheme.Blue" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/theme_blue_primary</item>
        <item name="colorPrimaryDark">@color/theme_blue_primary_dark</item>
        <item name="colorAccent">@color/theme_blue_accent</item>
        <item name="android:windowDisablePreview">@bool/theme_blue_window_disable_preview</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>

    </style>

    <!-- ToolBar -->
    <style name="ToolBarStyle" parent="Theme.AppCompat">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="actionMenuTextColor">@android:color/black</item>
    </style>

    <style name="AppTheme.Green.NoActionBar">
        <item name="windowActionBar">@bool/theme_green_window_no_action_bar</item>
        <item name="windowNoTitle">@bool/theme_green_window_no_title</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />




</resources>
